{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["*"],
            "lib/*": ["./lib/*"]
        }
    },
    "include": ["./*.js", "libs/*.js", "../libs/*.d.ts", "src/*.js"],
    "exclude": ["node_modules", "**/node_modules", "dist"]
}
